// -----------------------------------------------------------
// Prisma Generator & Datasource
// -----------------------------------------------------------

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// -----------------------------------------------------------
// 1. 유저 및 인증 (User & Auth)
// -----------------------------------------------------------

enum UserRole {
  BUYER
  SELLER
}

model User {
  id           String   @id @default(cuid())
  name         String   @unique
  email        String   @unique
  password     String
  type         UserRole @default(BUYER)
  image        String?
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  store          Store?
  inquiries      Inquiry[]
  reviews        Review[]
  cartItems      CartItem[]
  orders         Order[]
  userPoints     UserPoint?
  favoriteStores FavoriteStore[]
  inquiryReplies InquiryReply[]
}

// -----------------------------------------------------------
// 2. 스토어 및 상품 (Store & Product)
// -----------------------------------------------------------

model Store {
  id            String   @id @default(cuid())
  sellerId      String   @unique
  name          String
  address       String
  phoneNumber   String
  storeImageUrl String?
  description   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  seller    User            @relation(fields: [sellerId], references: [id])
  products  Product[]
  favorites FavoriteStore[]
}

enum ProductCategory {
  TOP
  BOTTOM
  OUTER
  DRESS
  SKIRT
  SHOES
  ACC
  ETC
}

model Product {
  id                Int       @id @default(autoincrement())
  name              String
  price             Int
  content           String?
  image             String?
  discountRate      Int?
  discountStartTime DateTime?
  discountEndTime   DateTime?

  categoryName String
  category     Category? @relation(fields: [categoryName], references: [name])

  isSoldOut Boolean @default(false)

  storeId String
  store   Store  @relation(fields: [storeId], references: [id])

  stocks     Stock[]
  inquiries  Inquiry[]
  reviews    Review[]
  cartItems  CartItem[]
  orderItems OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Stock {
  id       Int    @id @default(autoincrement())
  size     String
  quantity Int

  productId Int
  product   Product @relation(fields: [productId], references: [id])
}

model Category {
  name     String    @id
  products Product[]
}

// -----------------------------------------------------------
// 3. 장바구니 및 구매 (Cart & Purchase)
// -----------------------------------------------------------

model CartItem {
  id        String   @id @default(cuid())
  userId    String
  productId Int
  quantity  Int
  size      String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([userId, productId, size])
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELED
}

model Order {
  id              String      @id @default(cuid())
  userId          String
  orderNumber     String      @unique
  totalAmount     Int
  usedPoints      Int         @default(0)
  status          OrderStatus @default(PENDING)
  recipientName   String
  recipientPhone  String
  deliveryAddress String
  paymentDate     DateTime?
  createdAt       DateTime    @default(now())

  user       User        @relation(fields: [userId], references: [id])
  orderItems OrderItem[]
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId Int
  quantity  Int
  price     Int
  size      String

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
  review  Review?
}

// -----------------------------------------------------------
// 4. 문의 및 리뷰 (Inquiry & Review)
// -----------------------------------------------------------

model Inquiry {
  id        String   @id @default(cuid())
  title     String
  isSecret  Boolean  @default(false)
  status    String   @default("WaitingAnswer")
  productId Int
  userId    String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User          @relation(fields: [userId], references: [id])
  product Product       @relation(fields: [productId], references: [id])
  reply   InquiryReply?
}

model InquiryReply {
  id        String   @id @default(cuid())
  inquiryId String   @unique
  sellerId  String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  inquiry Inquiry @relation(fields: [inquiryId], references: [id])
  seller  User    @relation(fields: [sellerId], references: [id])
}

model Review {
  id          String   @id @default(cuid())
  userId      String
  productId   Int
  orderItemId String   @unique
  rating      Int
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User      @relation(fields: [userId], references: [id])
  product   Product   @relation(fields: [productId], references: [id])
  orderItem OrderItem @relation(fields: [orderItemId], references: [id])
}

// -----------------------------------------------------------
// 5. 포인트 및 등급 (Points & Grade)
// -----------------------------------------------------------

enum UserGrade {
  Green
  Orange
  Red
  Black
  VIP
}

model UserPoint {
  id                String    @id @default(cuid())
  userId            String    @unique
  points            Int       @default(0)
  accumulatedAmount Int       @default(0)
  grade             UserGrade @default(Green)
  pointRate         Float     @default(0.01)

  user User @relation(fields: [userId], references: [id])
}

// -----------------------------------------------------------
// 6. 관심 스토어 (Favorite Store)
// -----------------------------------------------------------

model FavoriteStore {
  id        String   @id @default(cuid())
  userId    String
  storeId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  store Store @relation(fields: [storeId], references: [id])

  @@unique([userId, storeId])
}
